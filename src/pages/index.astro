  <style>
    .hero {
      text-align: center;
      margin: 0 0 60px;
      padding: 80px 40px;
      background: #f5f5f5;
      border-radius: 8px;
    }

    .hero-content {
      max-width: 700px;
      margin: 0 auto;
    }

    .hero h1 {
      font-size: 3rem;
      margin-bottom: 20px;
      color: #222;
      font-weight: 700;
    }

    .highlight {
      color: #e74c3c;
      display: inline-block;
      position: relative;
    }

    .lead {
      font-size: 1.5rem;
      color: #555;
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.6;
    }

    section {
      margin-bottom: 60px;
    }

    h3 {
      font-size: 1.8rem;
      margin-bottom: 25px;
      color: #333;
      position: relative;
    }

    h3::after {
      content: '';
      display: block;
      width: 50px;
      height: 3px;
      background: #0066cc;
      margin-top: 5px;
    }

    .button {
      display: inline-block;
      background: #0066cc;
      color: white;
      padding: 10px 20px;
      border-radius: 4px;
      text-decoration: none;
      margin-top: 20px;
      transition: background 0.3s ease;
    }

    .button:hover {
      background: #0052a3;
    }

    .project-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
      gap: 25px;
      margin-bottom: 30px;
    }

    .project-card {
      border: 1px solid #ddd;
      border-radius: 8px;
      padding: 25px;
      background: #fff;
      transition: box-shadow 0.3s ease;
    }

    .project-card:hover {
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

    .project-card h4 {
      margin-bottom: 15px;
      color: #222;
    }

    .tech-stack {
      margin-top: 15px;
    }

    .tech-tag {
      display: inline-block;
      background: #e9ecef;
      color: #333;
      padding: 3px 8px;
      border-radius: 3px;
      font-size: 0.9rem;
      margin-right: 8px;
      margin-bottom: 5px;
    }

    .blog-preview {
      margin-bottom: 30px;
      padding: 20px;
      border: 1px solid #eee;
      border-radius: 8px;
    }

    .blog-preview h4 {
      color: #222;
      margin-bottom: 5px;
    }

    .blog-preview time {
      color: #666;
      font-size: 0.9rem;
      display: block;
      margin-bottom: 15px;
    }

    .blog-preview a {
      color: #0066cc;
      text-decoration: none;
      font-weight: bold;
    }
  </style>
</BaseLayout>